  <div class="bg-white d-none d-lg-block sticky-nav">
    <div class="container position-relative">
      <div class="row">
        <div class="col-auto align-self-center">
          <div class="header-logo">
            <a href="/"><img src="/assets/images/logo/logo.png" alt="Site Logo" /></a>
          </div>
        </div>
        <div class="col-auto align-self-center">
          <div class="main-menu">
            <ul>
