          <form class="action-form" action="#">
            <input class="form-control" placeholder="나인소 통합검색" type="text">
            <button class="submit" type="submit"><i class="icon-magnifier"></i></button>
          </form>
        </div>
        <div class="col align-self-center">
          <div class="header-actions">
            <!-- Single Wedge Start -->
            <div class="header-bottom-set dropdown">
              <% if(!session) {%>
              <a href="/users/login"><button class="dropdown-toggle header-action-btn"><span class="custom-icon-profile"></span></button></a>
              <% } else if(session) {%>
              <button class="dropdown-toggle header-action-btn" data-bs-toggle="dropdown"><span class="custom-icon-profile"></span></button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><a class="dropdown-item" href="#">회원정보변경</a></li>
                <li><a class="dropdown-item" href="/contact">최근 본 상품</a></li>
                <li><a class="dropdown-item" href="#">FAQ</a></li>
